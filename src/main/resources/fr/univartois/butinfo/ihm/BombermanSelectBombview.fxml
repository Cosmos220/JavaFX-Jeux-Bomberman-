<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.4" xmlns:fx="http://javafx.com/fxml" 
           fx:controller="fr.univartois.butinfo.ihm.controller.SelectBombController">
    <items>
        <!-- Partie Master (Liste des bombes) -->
        <VBox spacing="10" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ListView fx:id="listViewBombs" VBox.vgrow="ALWAYS" 
                      style="-fx-background-color: #34495E; -fx-control-inner-background: #2C3E50; -fx-text-fill: white;"/>
        </VBox>
        
        <!-- Partie Detail (DÃ©tails de la bombe) -->
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <ImageView fx:id="selectedBombImage" fitHeight="150" fitWidth="150" 
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);"/>
            
            <Label fx:id="selectedBombName" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <TextArea fx:id="selectedBombDescription" wrapText="true" editable="false" 
                      style="-fx-control-inner-background: #34495E; -fx-text-fill: white;"/>
            
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnValider" text="Valider" onAction="#handleValider"
                        style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
                <Button fx:id="btnAnnuler" text="Annuler" onAction="#handleAnnuler"
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </items>
</SplitPane>